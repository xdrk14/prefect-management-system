{
  "name": "prefect-management-system",
  "version": "3.0.0",
  "description": "Ultra-fast, extreme-performance prefect management system with Firebase authentication, maximum multi-core CPU usage, caching, and comprehensive analytics",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "start:cluster": "cross-env NODE_ENV=production pm2 start server.js -i max",
    "dev": "cross-env NODE_ENV=development nodemon server.js --watch server.js --watch database/ --watch public/ --watch .env",
    "setup": "node database/setup.js",
    "clean": "npx rimraf node_modules package-lock.json",
    "reset": "npm run clean && npm install",
    "build": "npm run setup",
    "lint": "eslint server.js database/ public/scripts/ public/auth/",
    "format": "prettier --write \"**/*.{js,json,html,css}\"",
    "security": "npm audit fix --force"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-ws": "^5.0.2",
    "firebase": "^11.10.0",
    "firebase-admin": "^13.4.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "sqlite3": "^5.1.7",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "author": "Hasthi",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "database/*.db",
      "database/*.db-*",
      "logs/",
      "backups/",
      "node_modules/"
    ],
    "ext": "js,json,html,css"
  },
  "overrides": {
    "ajv": "^8.18.0",
    "minimatch": "^10.2.2",
    "glob": "^11.0.1",
    "tar": "^7.5.9"
  }
}
